{% extends "base.j2" %}
{% set active_page = "control" %}

{% block title %} - Control{% endblock %}

{% block content %}
  <div class="container">
    <h1>Control</h1>
    <div class="panel panel-default">
      <div class="panel-heading">Command</div>
      <div class="panel-body">
        <div class="row" id="switch-panel">
          <div class="col-md-6">
            <div class="row">
              <div class="col-xs-6 col-md-6">
                <div class="inline-label-bold">Comms TX status</div>
                <div id="comms-on-off">
                  <div class="btn-group" role="group">
                    <button type="button" class="btn label-success" name="comms-tx-on" id="comms-tx-on">ON</button>
                    <button type="button" class="btn label-danger" name="comms-tx-off" id="comms-tx-off">OFF</button>
                  </div>
                </div>
              </div>
              <div class="col-xs-6 col-md-6">
                  <div class="inline-label-bold">Backend</div>
                  <div>
                    <div class="btn-group" role="group">
                      <button type="button" class="btn label-success" name="" id="comms-tx-on">GNURadio</button>
                      <button type="button" class="btn label-danger" name="" id="comms-tx-off">Serial</button>
                    </div>
                  </div>
              </div>
            </div>
            <hr>
            <div class="row" id="service-panel">
              <label for="">Services</label>
              <div id="service-panel">
                <select multiple class="form-control" id="service-select">
                  <option id="testservice-select">Test</option>
                  <option id="customservice-select">Custom</option>
                </select>
              </div>
              <div id="service-param-panel" style="display:none;">
                <div class="dropdown">
                  <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                    App ID
                    <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                    <li><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                  </ul>
                </div>
              </div>
              <div id="service-param-custom" style="display:none;">
                <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                    App ID
                    <span class="caret"></span>
                  </button>
                <div class="dropdown">
                  <ul id="service-param-custom-app_id" class="dropdown-menu" aria-labelledby="dropdownMenu1">
                    <li value="1" >OBC</li>
                    <li value="2" >EPS</li>
                    <li value="3" >ADCS</li>
                    <li value="4" >COMMS</li>
                    <li value="6" >GND</li>
                    <li value="7" >UMB</li>
                  </ul>
                  <ul id="service-param-custom-type" class="dropdown-menu" aria-labelledby="dropdownMenu1">
                    <li value="1" ><a href="#">TC</a></li>
                    <li value="0" ><a href="#">TM</a></li>
                  </ul>
                  <ul id="service-param-custom-ack" class="dropdown-menu" aria-labelledby="dropdownMenu1">
                    <li value="0" ><a href="#">NO ACK</a></li>
                    <li value="1" ><a href="#">ACK</a></li>
                  </ul>
                  <ul id="service-param-custom-service_type" class="dropdown-menu" aria-labelledby="dropdownMenu1">
                    <li value="1" ><a href="#">TC_VERIFICATION_SERVICE</a></li>
                    <li value="3" ><a href="#">TC_HOUSEKEEPING_SERVICE</a></li>
                    <li value="5" ><a href="#">TC_EVENT_SERVICE</a></li>
                    <li value="8" ><a href="#">TC_FUNCTION_MANAGEMENT_SERVICE</a></li>
                    <li value="9" ><a href="#">TC_TIME_MANAGEMENT_SERVICE</a></li>
                    <li value="11" ><a href="#">TC_SCHEDULING_SERVICE</a></li>
                    <li value="13" ><a href="#">TC_LARGE_DATA_SERVICE</a></li>
                    <li value="15" ><a href="#">TC_MASS_STORAGE_SERVICE</a></li>
                    <li value="17" ><a href="#">TC_TEST_SERVICE</a></li>
                    <li value="18" ><a href="#">TC_SU_MNLP_SERVICE</a></li>
                  </ul>
                  <ul id="service-param-custom-dest_id" class="dropdown-menu" aria-labelledby="dropdownMenu1">
                    <li value="1" ><a href="#">OBC</a></li>
                    <li value="2" ><a href="#">EPS</a></li>
                    <li value="3" ><a href="#">ADCS</a></li>
                    <li value="4" ><a href="#">COMMS</a></li>
                    <li value="6" ><a href="#">GND</a></li>
                    <li value="7" ><a href="#">UMB</a></li>
                  </ul>
                  <button type="submit" class="btn btn-primary" id="send-custom-cmd">Send</button>
                </div>
              </div>
              <button type="submit" class="btn btn-primary" id="send-cmd">Submit</button>
            </div>
            <hr>
            <div class="row">
              <!--<form enctype="multipart/form-data">
                  <input name="file" type="file" />
                  <input type="button" value="Upload" />
                  <progress></progress>
              </form>-->
              <form method="post" action="" enctype="multipart/form-data" novalidate="" class="box has-advanced-upload">
                <div class="box__input">
                   <svg class="box__icon" xmlns="http://www.w3.org/2000/svg" width="50" height="43" viewBox="0 0 50 43">
                    <path d="M48.4 26.5c-.9 0-1.7.7-1.7 1.7v11.6h-43.3v-11.6c0-.9-.7-1.7-1.7-1.7s-1.7.7-1.7 1.7v13.2c0 .9.7 1.7 1.7
                            1.7h46.7c.9 0 1.7-.7 1.7-1.7v-13.2c0-1-.7-1.7-1.7-1.7zm-24.5 6.1c.3.3.8.5 1.2.5.4 0 .9-.2 1.2-.5l10-11.6c.7-.7.7-1.7
                            0-2.4s-1.7-.7-2.4 0l-7.1 8.3v-25.3c0-.9-.7-1.7-1.7-1.7s-1.7.7-1.7 1.7v25.3l-7.1-8.3c-.7-.7-1.7-.7-2.4 0s-.7 1.7 0 2.4l10
                             11.6z">
                    </path>
                  </svg>
                  <input type="file" name="files[]" id="file" class="box__file" data-multiple-caption="{count} files selected" multiple="">
                  <label for="file"><strong>Choose a file</strong></label>
                  <button type="submit" class="btn btn-primary box__button">Upload</button>
                </div>
                <div class="box__uploading">Uploadingâ€¦</div>
                <div class="box__success">Done! <a href="https://css-tricks.com/examples/DragAndDropFileUploading//?submit-on-demand" class="box__restart" role="button">Upload more?</a></div>
                <div class="box__error">Error! <span></span>. <a href="https://css-tricks.com/examples/DragAndDropFileUploading//?submit-on-demand" class="box__restart" role="button">Try again!</a></div>
                <input type="hidden" name="ajax" value="1">
              </form>
            </div>
          </div>
          <div class="col-md-6">
            <div class="panel panel-primary" id="response-panel">
              <div class="panel-heading">Terminal</div>
              <div class="panel-body" id="response-panel-body">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

{% endblock %}
{% block js %}
<script src="{{ url_for('static', filename='js/satnogs-control.js') }}"></script>
{% endblock %}
