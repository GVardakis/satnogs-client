{% extends "base.j2" %}
{% set active_page = "status" %}

{% block title %} - Status{% endblock %}

{% block content %}
  <div class="container">
    <h1>Status</h1>
    <div class="panel panel-default">
  	  <div class="panel-heading">
  	    <h3 class="panel-title">System</h3>
  	  </div>
  	  <div class="panel-body row text-center">
	  	  <div class="system-labels">
	  		  <div class="col-xs-6 col-sm-3">
	  		  	<span class="label label-success" id="internet-connection">Internet</span>
	  		  </div>
	  		  <div class="col-xs-6 col-sm-3">
	  	    	<span class="label label-success">SatNogs client</span>
	  		  </div>
	  		  <div class="col-xs-6 col-sm-3">
	  		  	<span class="label label-success">SDR</span>
	  	      </div>
	  	      <div class="col-xs-6 col-sm-3">
	  	    	<span class="label label-danger">Rotor</span>
	  	      </div>
	      </div>
      </div>
	</div>
    <div class="panel panel-default">
  	  <div class="panel-heading">
  	    <h3 class="panel-title">Ground station</h3>
  	  </div>
  	  <div class="panel-body row">
        <div class="col-xs-4">
          <div class="col-xs-6">Azimuth:</div> <div class="col-xs-4">NA</div>
          <div class="col-xs-6">Elevation:</div> <div class="col-xs-4">NA</div>
          <div class="col-xs-6">Frequency:</div> <div class="col-xs-4">NA</div>
        </div>
        <div class="col-xs-6">
        	<div class="circle">
        		<div class="arrow" id="current-pass-arrow">
        		</div>
        	</div>
      </div>
	</div>
  </div>
  <div class="panel panel-default">
  	  <div class="panel-heading">
  	    <h3 class="panel-title">SatNogs</h3>
  	  </div>
  	  <div class="panel-body row">
      	<div class="col-xs-12 status-current-pass">
      		<div class="col-xs-3 no-padding">
      			</h5> <b>Current pass</b>
            <hr>
          </div>
      		</div>
	      	<div class="col-12">
  		      <div class="col-xs-8">
              <div class="col-xs-3">Name:</div> <div class="col-xs-9" id="name"></div>
              <div class="col-xs-3">ID:</div> <div class="col-xs-9" id="obs-id"></div>
              <div class="col-xs-3">Rising:</div> <div class="col-xs-9" id="rising"></div>
              <div class="col-xs-3">Setting:</div> <div class="col-xs-9" id="setting"></div>
              <div class="col-xs-3">Max Altitude:</div> <div class="col-xs-9" id="max-alt"></div>
              <div class="col-xs-3">Demod:</div> <div class="col-xs-9" id="demod"></div>
              <div class="col-xs-3">Decode:</div> <div class="col-xs-9" id="decod"></div>
		          <div class="col-xs-3">Azimuth:</div> <div class="col-xs-9" id="azimuth"></div>
		          <div class="col-xs-3">Elevation:</div> <div class="col-xs-9" id="elevation"></div>
		          <div class="col-xs-3">Frequency:</div> <div class="col-xs-9" id="freq"></div>
              <div class="col-xs-3">TLE:</div> <div class="col-xs-9" id="current-tle1"></div>
              <div class="col-xs-3">TLE:</div> <div class="col-xs-9" id="current-tle2"></div>
		        </div>
		        <div class="col-xs-4" id="map-container">
              <div id="map">
              </div>
	        	</div>
	        </div>
	        <div class="col-12">
		        <div class="col-xs-12">
			      	<div class="progress pass-progress">
					  <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
					    60%
					  </div>
					</div>
				</div>
	        </div>
      	</div>
      	<div class="col-xs-12 status-scheduled-pass">
      		<div class="col-xs-3 no-padding">
      			</h5> <b>Scheduled passes</b>
          </div>
      		</div>
      		<table class="table table-hover scheduled-pass-table" id="scheduled-observation-table">
      			<tr>
      				<td> Name </td>
      				<td> Rise time </td>
      				<td> Max altitude </td>
      				<td> Frequency </td>
      			</tr>
		    </table>
      </div>
	</div>


</div>
{% endblock %}

{% block js %}
<script type="text/javascript"
  src="https://maps.googleapis.com/maps/api/js?v=3&amp;key=AIzaSyDbe4C0aiR8qCAlTKUTmLO2l2FHTFz3Ozk">
</script>
<script src="{{ url_for('static', filename='js/satnogs-status.js') }}"></script>
{% endblock %}
